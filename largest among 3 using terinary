#include <iostream>
using namespace std;

int main() {
    int num1, num2, num3;
    
    // Input three numbers
    cout << "Enter the first number: ";
    cin >> num1;
    cout << "Enter the second number: ";
    cin >> num2;
    cout << "Enter the third number: ";
    cin >> num3;
    
    // Using ternary conditional operator to find the largest number
    int largest = (num1 > num2) ? 
                  (num1 > num3 ? num1 : num3) : 
                  (num2 > num3 ? num2 : num3);
    
    // Output the largest number
    cout << "The largest number is: " << largest << endl;
    
    return 0;
}
